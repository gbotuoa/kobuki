<launch>
  <arg name="marker_size" default="11" />
  <arg name="max_new_marker_error" default="0.1" />
  <arg name="max_track_error" default="0.4" />
  
  <arg name="cam_image_topic" default="/camera/image_rect_color" />
  <arg name="cam_info_topic" default="/camera/camera_info" />
  <arg name="output_frame" default="/camera_rgb_optical_frame" />
  
  <node name="ar_track_alvar" pkg="ar_track_alvar" type="individualMarkers" respawn="false" output="screen" args="$(arg marker_size) $(arg max_new_marker_error) $(arg max_track_error) $(arg cam_image_topic) $(arg cam_info_topic) $(arg output_frame)" />


  <remap from="/cv_camera" to="/camera" />
  <param name="camera_prefix" value="/camera" />
  
  
  <!-- Launch the usb camera acquisition node -->
  <node pkg="cv_camera" type="cv_camera_node" name="cv_camera" output="screen">      
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <!-- <param name="camera_info_url" value="package://visp_auto_tracker/models/calibration.ini" type="string" /> -->
  </node>

  
  <!-- Launch image_proc -->
  <node pkg="image_proc" type="image_proc" name="image_proc" output="screen">      
    <env name="ROS_NAMESPACE" value="/camera" />
  </node>

</launch>



